<%- include('partials/header') %> 
<!-- this is how to we do partial templating using ejs and express latest version -->
<body>

    <div class="container">
        <%- include('partials/navBar') %>
        <!-- Another partail templating -->
    <div class="main">
        <div class="signin">
            <form action="/register" method="POST">
                <% if(message) {%>
                <h3 style="background-color: red;"><%= message %></h3>
                <% } %>
                <div>
                     Name: <input type="text" name="firstname" required>
                </div>
                <div>
                    Email: <input type="email" name="email" required>
                </div>
                <div>
                    Phone: <input type="number" name="phone" required>
                </div>
                  <div id="flex"> 
                    <div class="flex-child">
                        Password: <input type="password" name="password" required id="pwd">
                        <img src="/assets/images/password.png" alt="" id="img">
                    </div> 
                  </div>
                  <div id="flex"> 
                    <div class="flex-child">
                       Confirm Password: <input type="password" name="confirm_password" required id="pwd">
                        <img src="/assets/images/password.png" alt="" id="img">
                    </div> 
                  </div>
               <div class="submit">
                    <input type="submit" value="submit">
                </div>
                <div class="login">
                    <div class="signin"><a href="signin" style="color: #000;">Already have an account? login</a></div>
                </div>
            </form>
        </div>
    </div>

<%- include('partials/footer') %>